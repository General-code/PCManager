<Page x:Class="PCManager.Views.MachineMonitoringPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PCManager.Views"
      xmlns:scottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MachineMonitoringPage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="WeldingGrid"
           VirtualizingPanel.VirtualizationMode="Recycling"
           VirtualizingPanel.IsVirtualizing="True"
           AutoGenerateColumns="True"
           AutoGeneratingColumn="WeldingGrid_AutoGeneratingColumn"
           Grid.Column="0">
            <DataGrid.Columns>
            </DataGrid.Columns>

        </DataGrid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <scottPlot:WpfPlot Grid.Row="0" Name="BasicPlot"/>
            <scottPlot:WpfPlot Grid.Row="1" Name="NextPlot"/>
        </Grid>
    </Grid>
</Page>
