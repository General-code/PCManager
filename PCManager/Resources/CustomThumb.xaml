<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="PCItem" TargetType="Thumb">
        <Border CornerRadius="8" Background="DodgerBlue"
                BorderBrush="Black" BorderThickness="2" Opacity="0.8"
                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" >

            <Border.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                          Command="{Binding DataContext.OpenMonitoringCommand,
                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                          CommandParameter="{Binding}"/>
            </Border.InputBindings>

            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Name}"
                           Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <!--<TextBlock Grid.Row="1" Text="{Binding Status}" Foreground="LightCyan" HorizontalAlignment="Center"/>-->
            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>